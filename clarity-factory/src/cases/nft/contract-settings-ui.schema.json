{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "NFT Template Settings",
  "required": ["general"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "general": { "$ref": "#/definitions/General" },
    "currency": { "$ref": "#/definitions/Currency" },
    "mint": { "$ref": "#/definitions/Mint" }
  },

  "definitions": {
    "General": {
      "type": "object",
      "title": "General settings",
      "description": "",
      "required": ["name", "token-uri-base"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the NFT"
        },
        "contract-owner": {
          "type": "object",
          "title": "Contract Owner",
          "description": "Stacks address for the owner of this NFT contract. This address will be allowed to perform changes to the NFT contract's settings.",
          "required": ["value"],
          "additionalProperties": false,
          "properties": {
            "value": {
              "type": "string",
              "title": "Owner Address",
              "clarityType": "principal"
            },
            "updatable": {
              "type": "boolean",
              "title": "Owner can be updated after deploy"
            }
          }
        },
        "token-uri-base": {
          "type": "object",
          "title": "Token URI base",
          "description": "Base URI for the NFT image.",
          "required": ["value"],
          "additionalProperties": false,
          "properties": {
            "value": {
              "type": "string",
              "title": "Token URI base",
              "clarityType": "(string-ascii 80)",
              "default": "ipfs://.../"
            },
            "updatable": {
              "type": "boolean",
              "title": "Token URI base can be updated after deploy"
            }
          }
        }
      }
    },

    "Currency": {
      "type": "object",
      "title": "Currencies settings",
      "description": "Define if NFTs can be minted with STX and or Citycoins (NYC, MIA)",
      "additionalProperties": false,
      "properties": {
        "enable-stx-mint": {
          "type": "boolean",
          "title": "Accept STX",
          "default": true
        },
        "enable-nyc-mint": {
          "type": "boolean",
          "title": "Accept NYC",
          "default": false
        },
        "enable-mia-mint": {
          "type": "boolean",
          "title": "Accept MIA",
          "default": false
        },
        "stx-price": {
          "type": "object",
          "title": "STX Price",
          "description": "Price in STX.",
          "required": ["value"],
          "additionalProperties": false,
          "properties": {
            "value": {
              "type": "number",
              "title": "Value in STX",
              "clarityType": "uint"
            },
            "updatable": {
              "type": "boolean",
              "title": "STX price can be updated after deploy"
            }
          }
        },
        "nyc-price": {
          "type": "object",
          "title": "NYC Price",
          "description": "Price in NYC.",
          "required": ["value"],
          "additionalProperties": false,
          "properties": {
            "value": {
              "type": "number",
              "title": "Value in NYC",
              "clarityType": "uint"
            },
            "updatable": {
              "type": "boolean",
              "title": "NYC price can be updated after deploy"
            }
          }
        },
        "mia-price": {
          "type": "object",
          "title": "MIA Price",
          "description": "Price in MIA.",
          "required": ["value"],
          "additionalProperties": false,
          "properties": {
            "value": {
              "type": "number",
              "title": "Value in MIA",
              "clarityType": "uint"
            },
            "updatable": {
              "type": "boolean",
              "title": "MIA price can be updated after deploy"
            }
          }
        }
      }
    },

    "Mint": {
      "type": "object",
      "title": "Mint settings",
      "description": "Mint settings such as limit and early birds",
      "additionalProperties": false,
      "properties": {
        "mint-limit": {
          "type": "object",
          "title": "Mint limit",
          "description": "Mint limit per STX address. Leave empty for unlimited.",
          "additionalProperties": false,
          "properties": {
            "value": {
              "type": "number",
              "clarityType": "uint",
              "default": 10
            },
            "updatable": {
              "type": "boolean",
              "title": "Mint limit can be updated after deploy"
            }
          }
        },
        "allow-list": {
          "type": "object",
          "title": "Early bird access",
          "description": "Allow addresses to claim early access to your NFT.",
          "additionalProperties": false,
          "properties": {
            "addresses": {
              "type": "array",
              "title": "Allowed addresses",
              "description": "Add Stacks addresses to allow early access.",
              "items": {
                "type": "string"
              }
            },
            "allow-all-at-block-height": {
              "type": "object",
              "title": "Allow all at block height",
              "description": "Allow everyone to mint from this block height. Leave empty to disable mint for all.",
              "required": ["value"],
              "additionalProperties": false,
              "properties": {
                "value": {
                  "type": "number",
                  "title": "Block height",
                  "clarityType": "uint"
                },
                "updatable": { "type": "boolean" }
              }
            }
          }
        }
      }
    }
  }
}
